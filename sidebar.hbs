{{> header }}
<body class="{{body_class}}">
	<div id="uh-wrapper">
        <header id="uh-topbar">
            <i id="uh-show-sidebar" class="fa fa-bars"></i>
            <a href="/"><span>Ugly</span>
            <i class="fa fa-bicycle"></i>
            <span>Helmet</span></a>
        </header>

        <aside id="uh-sidebar">
            <div id="uh-sidebar-main">
                <div id="uh-hide-sidebar">
                    <i class="fa fa-times"></i>
                </div>
                <header id="uh-sidebar-header">
                    <a href="/"><span>Ugly</span>
                    <i class="fa fa-bicycle"></i>
                    <span>Helmet</span></a>
                </header>
                <section id="uh-sidebar-author">
                    <a href="/about">
                    <div id="uh-author-image">
                        <img src="{{posts.[0].author.image}}{{post.author.image}}" itemprop="image" />
                    </div></a>
                    <a href="/about">
                    <div id="uh-author-name">
                        {{posts.[0].author.name }}{{post.author.name}}
                    </div></a>
                    <div id="uh-author-bio">
                        {{posts.[0].author.bio}}{{post.author.bio}}
                    </div>
                    <div id="uh-author-links">
                        <h2>Connect</h2>
                        <a href="http://facebook.com/harryjohn671003">
                            <i class="fa fa-facebook-square"></i>
                        </a>
                        <a href="http://instagram.com/uglyhelmet">
                            <i class="fa fa-instagram"></i>
                        </a>
                        <a href="http://github.com/harry671003">
                            <i class="fa fa-github-square"></i>
                        </a>
                    </div>
                </section>

            </div>
        </aside>
        

        <div class="post-list-uber">
            {{{body}}}
        </div>
	</div>
{{> footer }}